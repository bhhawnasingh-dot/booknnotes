<script>
function update(){
  document.getElementById("pBrand").innerText =
    document.getElementById("brand").value || "Your Brand Name";

  document.getElementById("pTag").innerText =
    document.getElementById("tagline").value || "Your catchy line here";

  document.getElementById("pPlatform").innerText =
    document.getElementById("platform").value;

  let c1=document.getElementById("color1").value;
  let c2=document.getElementById("color2").value;
  let font=document.getElementById("font").value;

  let box=document.getElementById("preview");
  box.style.background=`linear-gradient(135deg, ${c1}, ${c2})`;
  box.style.fontFamily=font;
}

document.querySelectorAll("input,select")
.forEach(el=>el.addEventListener("input",update));

function downloadPNG(){
  html2canvas(document.getElementById("preview"),{
    scale:3
  }).then(canvas=>{
    let link=document.createElement("a");
    link.download="social-media-template-1080x1920.png";
    link.href=canvas.toDataURL("image/png");
    link.click();
  });
}
</script>

